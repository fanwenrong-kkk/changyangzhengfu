
._div,
scroll-view,
swiper {
	box-sizing: border-box;
}
.wuc-tab {
    white-space: nowrap;
}
.wuc-tab-item {
    height: 90rpx;
    display: inline-block;
    line-height: 90rpx;
    margin: 0 10rpx;
    padding: 0 20rpx;
	font-weight: 600;
	font-size: 30rpx
}
.wuc-tab-item.cur {
    /* border-bottom: 4upx solid; */
	position: relative;
}
.wuc-tab-item.cur::before{
	 content: " ";
	 display: block;
	position: absolute;
	width: 102rpx;
	bottom: 10rpx;
	height: 4rpx;
	/* margin: auto; */
	left: 66rpx;
	background-color:#C30D24 ;
}
.wuc-tab.fixed {
	position: fixed;
	width: 100%;
	top: 0;
	z-index: 1024;
	box-shadow: 0 1rpx 6rpx rgba(0, 0, 0, 0.1);
}
